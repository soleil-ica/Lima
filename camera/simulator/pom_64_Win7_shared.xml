    <build>
        <plugins>
            <plugin>
                <groupId>org.freehep</groupId>
                <artifactId>freehep-nar-plugin</artifactId>
				<version>2.0-alpha-17-SOLEIL</version>
                <configuration>
                    <cpp>
                        <sourceDirectory>src</sourceDirectory>
                        <includePaths>
                            <includePath>include</includePath>
                        </includePaths>
                    </cpp>
					<linker>
					<libs>
						
					</libs>
				   </linker>
                    <libraries>
                        <library>
                            <type>shared</type>
                        </library>
                    </libraries>
                    <specificConfigurations>
                        <specificConfiguration>
                            <id>win32 platform</id>
                            <activation>
                                <os>Windows</os>
                            </activation>
                            <cpp>
                                <defines>
                                    <define>LIBSIMULATOR_EXPORTS</define>
                                    <define>WIN32</define>
                                    <define>NDEBUG</define>
                                    <define>_WINDOWS</define>
                                    <define>_USRDLL</define>
                                    <define>_WIN32_WINNT=_WIN32_WINNT_WIN7</define>
                                    <define>WIN32_LEAN_AND_MEAN</define>
                                </defines>
                            </cpp>
                        </specificConfiguration>
                    </specificConfigurations>
                </configuration>
            </plugin>
            <plugin>
                <groupId>fr.soleil.maven.plugins</groupId>
                <artifactId>maven-check-plugin</artifactId>
                <configuration>
                    <enable>false</enable>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
